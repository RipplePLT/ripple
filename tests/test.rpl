void test_int_arithmetic() {
   # Integer Arithmetic
   print("[INTEGER ARITHMETIC TEST]");

   int result_1 = 1 + 2;
   print("\tLiteral Addition:\t", result_1);

   int result_2 = 4 - 2;
   print("\tLiteral Substraction:\t", result_2);

   int result_3 = 4 * 2;
   print("\tLiteral Multiplication:\t", result_3);

   int result_4 = 4 / 2;
   print("\tLiteral Division:\t", result_4);

   int result_5 = 2 ^ 4;
   print("\tLiteral Exponent:\t", result_5);

   int result_6 = 10 % 5;
   print("\tLiteral Modulo:     \t", result_6);
   print("\tLiteral Tests Passed!\n");

   result_1 = result_2 + 4;  # Should be 6
   print("\tSingle Var Addition:\t", result_1);

   result_2 = result_1 - 10; # Should be -4
   print("\tSingle Var Subtraction:\t", result_2);

   result_3 = result_2 * 2;  # Should be -8
   print("\tSingle Var Multi:\t", result_3);

   result_4 = result_3 / 5;  # Should be -1
   print("\tSingle Var Division:\t", result_4);

   result_5 = result_4 ^ 2;  # Should be 1
   print("\tSingle Var Exponent:\t", result_5);

   result_6 = result_1 % 4; # Should be 2
   print("\tSingle Var Modulo:\t", result_6);
   print("\tSingle Var Tests Passed!\n");

   result_1 = result_2 + result_3; # Should be -12
   print("\tTwo Var Addition:\t", result_1);

   result_2 = result_1 - result_3; # Should be -4
   print("\tTwo Var Subtraction:\t", result_2);

   result_3 = result_1 * result_2; # Should be 48
   print("\tTwo Var Multiplication:\t", result_3);

   result_4 = result_3 / result_1; # Should be -4
   print("\tTwo Var Division:\t", result_4);

   result_5 = result_4 ^ -result_2; # Should be 256
   print("\tTWo Var Exponentiation:\t", result_5);

   result_6 = result_5 % result_2; # Should be 0
   print("\tTwo Var Modulo:\t\t", result_6);
   print("\tInteger Arithmetic Passed!\n");
}


void test_float_arithmetic() {
   # Integer Arithmetic
   print("[FLOAT ARITHMETIC TEST]");

   float result_1 = 1 + 2;
   print("\tLiteral Addition:\t", result_1);

   float result_2 = 4 - 2;
   print("\tLiteral Substraction:\t", result_2);

   float result_3 = 4 * 2;
   print("\tLiteral Multiplication:\t", result_3);

   float result_4 = 4 / 2;
   print("\tLiteral Division:\t", result_4);

   float result_6 = 10 // 2;
   print("\tLiteral Float Division:\t", result_6);

   float result_5 = 2 ^ 4;
   print("\tLiteral Exponent:\t", result_5);
   print("\tLiteral Tests Passed!\n");

   result_1 = result_2 + 4;  # Should be 6
   print("\tSingle Var Addition:\t", result_1);

   result_2 = result_1 - 10; # Should be -4
   print("\tSingle Var Subtraction:\t", result_2);

   result_3 = result_2 * 2;  # Should be -8
   print("\tSingle Var Multi:\t", result_3);

   result_4 = result_3 / 5;  # Should be -1
   print("\tSingle Var Division:\t", result_4);

   result_6 = result_3 // -2;
   print("\tSingle Var Float Div:\t", result_6);

   result_5 = result_4 ^ 2;  # Should be 1
   print("\tSingle Var Exponent:\t", result_5);
   print("\tSingle Var Tests Passed!\n");

   result_1 = result_2 + result_3; # Should be -12
   print("\tDouble Var Addition:\t", result_1);

   result_2 = result_1 - result_3; # Should be -4
   print("\tDouble Var Subtraction:\t", result_2);

   result_3 = result_1 * result_2; # Should be 48
   print("\tTwo Var Multiplication:\t", result_3);

   result_4 = result_3 / result_1; # Should be -4
   print("\tTwo Var Division:\t", result_4);

   result_6 = result_1 // result_2;
   print("\tTwo Var Float Division:\t", result_6);

   result_5 = result_4 ^ -result_2; # Should be 256
   print("\tTwo Var Exponent:\t", result_5);
   print("\tFloat Arithmetic Passed!\n");
}


void test_string_concatenation() {
